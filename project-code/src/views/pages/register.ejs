<%- include ('../partials/header') %>
  <%- include ('../partials/menu') %>
<main>
  <div class="container home-color">
    <h1 title>Register</h1>
    <form action="/register" method="POST">
        <div class="form-group">
            <label home-color for="email">Email:</label>
            <input type="username" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="text" class="form-control" name="password">
        </div>
        <br>
        <p style="display: inline;">Already have an account?</p>
        <a href="/login" class="hover" style="display: inline;">Login</a>
        <br>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </div>

<%- include ('../partials/footer') %>