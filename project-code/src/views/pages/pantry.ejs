<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <table>
                    <tr>
                        <th>Your Ingredients</th>
                    </tr>
                </table>
                <div style="overflow: auto; max-height: 75vh; border: 1px solid #ccc; padding: 10px;">
                    <table>
                    <% var table_rows = '';
                        ingredients.forEach(function(item){
                            table_rows += `<tr><td>${item.ingredient_text}</td>
                                <td><form action="/pantry/delete" method="POST">
                                    <input type="submit" value="DELETE" />
                                    <input type="hidden" name="ingredient_id" value="${item.ingredient_id}">
                                </form></td></tr>`;
                        });
                        %>
                    <%- table_rows %>
                    </table>
                </div>
            </div>
            <div class="col bg-success-subtle border-start border-4 border-dark" style="max-height: 100%">
                <table>
                    <tr>
                        <th>Add Ingredients</th>
                    </tr>
                    <tr>
                        <td>
                        <form action="/pantry/search" method="POST">
                            <div class="form-group">
                                <label for="search_val">Find an Ingredient</label>
                                <input type="search_val" class="form-control" name="search_val">
                            </div>
                            <button type="submit" class="btn btn-primary">Search</button>
                        </form>
                        </td>
                    </tr>
                    <tr>
                        <th>Available Ingredients</th>
                    </tr>
                    </table>
                        <div style="overflow: auto; max-height: 40vh; border: 1px solid #ccc; padding: 10px;">
                            <table>
                            <tr>
                                <% var table_rows = '';
                                unused_ingredients.forEach(function(item){
                                    table_rows += `<tr><td>${item.ingredient_text}</td>
                                        <td><form action="/pantry/add" method="POST">
                                            <input type="submit" value="ADD" />
                                            <input type="hidden" name="ingredient_id" value="${item.ingredient_id}">
                                        </form></td></tr>`;
                                });
                                %>
                            <%- table_rows %>
                            </tr>
                            </table>
                        </div>
            </div>
        </div>
    </div>
</main>

<%- include ('../partials/footer') %>