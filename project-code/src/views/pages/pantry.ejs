<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-8">
                <% var table_rows = '';
                ingredients.forEach(function(item){
                    table_rows += `<tr><td>${item.ingredient_text}</td>
                        <td><form action="/ingredients/delete" method="POST">
                            <input type="submit" value="DELETE" />
                            <input type="hidden" name="course_id" value="${item.course_id}">
                        </form></td></tr>`;
                    }
                    %>
                <% }); %>
                <%- table_rows %>
            </div>
            <div class="col bg-success-subtle border-start border-4 border-dark" style="max-height: 100%">
                <div class="mt-3 card p-3 bg-success">
                    <table class="table-success-subtle">
                        <thead>
                            <tr>
                            <th scope="col"><h3>Add Ingredients</h3></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>put Add Ingredient form here</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
  </main>

<%- include ('../partials/footer') %>