<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<script src="../resources/js/javascript.js"></script>

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-8">
                <div class="mt-3 card p-3 bg-success-subtle">
                    <table class="table-success-subtle">
                        <thead></thead>
                        <tbody>
                            <tr>
                                <td>
                                    <form>
                                        <div class="form-group">
                                            <textarea class="form-control" id="dynamicTextBox" rows="15" readonly></textarea>
                                        </div>
                                    </form>
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    
                                        <form id="KitchenForm">
                                            <label for="prompt" class="col col-form-label">Tell us what you're in the mood for:</label>
                                            <div class="row mb-3">
                                              
                                              <div class="col-9">
                                                <input type="text" class="form-control border border-success" id="prompt" name="prompt">
                                      
                                              </div>
                                              <div class="col">
                                                <button type="submit" class="btn btn-outline-success" formaction="/kitchen/create">Create</button>
                                            </div>
                                            <div class="col">
                                                <button type="submit" class="btn btn-outline-success" formaction="/kitchen/post">Post</button>
                                            </div>
                                            </div>
                                          </form>  
                                    
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                                        <input type="radio" class="btn-check" name="btnradio" id="pantry_true" autocomplete="off" checked>
                                        <label class="btn btn-outline-success" for="pantry_true">Restricted</label>
                                      
                                        <input type="radio" class="btn-check" name="btnradio" id="pantry_false" autocomplete="off">
                                        <label class="btn btn-outline-success" for="pantry_false">Un-restricted</label>
                                      
                                      </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col">
                <div class="mt-3 card p-3 bg-success-subtle">
                    <table class="table-success-subtle">
                        <thead>
                            <tr>
                                 <td><h2>Past Recipes:</h2></td>
                            </tr>
                        </thead>
                        <tbody>
                                <% if (recipes && recipes.length > 0) { %> 
                                    <% recipes.slice(0,10).forEach(function(recipe) { %> 
                                        <tr> 
                                            <td class="row"> 
                                                <a class="hover-dark" data-bs-toggle="modal" data-bs-target="#recipeModal<%= recipe.recipe_id %>">
                                                    <%= recipe.recipe_name %>
                                                  </a>
                                                 
                                            <td> 
                                        </tr>        
                                        <div class="modal fade" id="recipeModal<%= recipe.recipe_id %>" tabindex="-1" aria-labelledby="recipeModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                              <div class="modal-content">
                                                <div class="modal-header">
                                                  <h5 class="modal-title" id="recipeModalLabel"><%= recipe.recipe_name %></h5>
                                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <form id="editRecipeForm">
                                                        <div class="mb-3">
                                                          <label for="recipeName" class="form-label">Recipe Name:</label>
                                                          <input type="text" class="form-control" id="recipeName" value="<%= recipe.recipe_name %>" required>
                                                        </div>
                                                        <div class="mb-3">
                                                          <label for="recipeText" class="form-label">Recipe Text:</label>
                                                          <textarea class="form-control" id="recipeText" rows="4" required><%= recipe.recipe_text %></textarea>
                                                        </div>
                                                      </form>
                                                </div>
                                                <div class="modal-footer">
                                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                  <button type="button" class="btn btn-primary" onclick="saveRecipeChanges(<%= recipe.recipe_id %>)">Save Changes</button>
                                                </div>
                                              </div>
                                            </div>
                                          </div>                                
                                    <% }); %> 
                            <% } else { %> 
                                <tr><td>No recipes found</td></tr> 
                   
                            <% } %> 
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
  </main>

<%- include ('../partials/footer') %>